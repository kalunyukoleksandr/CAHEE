mixin home 
    .home#home
        .home__wrapper
            .container.container--lg
                .row
                    +nav
                .row
                    .col-xl-4.offset-xl-0.col-lg-5.offset-lg-1.col-md-6.offset-md-1.col-sm-8.offset-sm-2.col-10.offset-1
                        .home__info-top
                            h1.home__title Fresh Life
                            p.home__subtitle Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco.
                            a.btn.btn--home(href='javascript:void(0)') GET FREE NOW
                .row.d-sm-block.d-none
                    .col-12.d-flex.justify-content-center
                        .home__info-bottom
                            a.home__link(href='#')
                                +picture("scroll","png","picture of a mouse").home__scroll